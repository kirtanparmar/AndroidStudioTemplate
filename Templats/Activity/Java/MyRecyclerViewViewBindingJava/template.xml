<?xml version="1.0"?>
<template
    format="4"
    revision="1"
    name="My RecyclerView Activity (View Binding - Java)"
    description="Creates a new empty activity">

    <category value="Activity" />

    <parameter
        id="activityName"
        name="Activity Class Name"
        type="string"
        constraints="class|unique|nonempty"
        default="MyRv"
        help="The name of the activity class to create.(Activity word will autometically insrted at last.)\nFunctionality Only For Java class." />

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
